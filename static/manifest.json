{
  "manifest_version": 2,
  "name": "Trawler",
  "version": "0.1",
  "description": "To trawl the web",
  "icons": {
    "24": "icon_24.png",
    "128": "icon_128.png"
  },
  "permissions": ["<all_urls>", "background", "webRequest", "webRequestBlocking"],
  "content_scripts": [
    {
      "js": [ "inject.js" ],
      "matches": [ "<all_urls>" ]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "24": "icon_24.png"
    },
    "default_title": "Trawler",
    "default_popup": "popup.html"
  }
}