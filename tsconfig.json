{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "pretty": true,
        "strict": true,
        "module": "es6",
        "skipLibCheck": true,
        "traceResolution": true,
        "removeComments": true,
        "target": "es2016",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "lib": [ "es6", "dom"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
